<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:background="@drawable/down_bottom_sheet"
            android:id="@+id/button_back"/>

        <ImageView
            android:layout_marginVertical="30dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/main_person3"
            android:id="@+id/person_sheet"/>

        <TextView
            android:id="@+id/text_emotion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/b612_mono"
            android:text="emotion"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/style_black_btn"
                android:fontFamily="@font/b612_mono"
                android:text="sad"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnMorm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/style_black_btn"
                android:fontFamily="@font/b612_mono"
                android:text="norm"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnHappy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/style_black_btn"
                android:fontFamily="@font/b612_mono"
                android:text="happy"
                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:text="@string/text_share_emotion"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:fontFamily="@font/b612_mono"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sharebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/style_black_btn"
            android:fontFamily="@font/b612_mono"
            android:text="@string/text_share"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>


</FrameLayout>