<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fon_main2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginVertical="15dp">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:background="@drawable/down_bottom_sheet"
            android:id="@+id/button_back"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/textWithUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/reem_kufi"
                    android:text="Share your reaction to friend"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="10dp"
                    android:gravity="center"/>

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="100dp"
                    android:background="@drawable/share_emotion"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"/>
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonEmbrace"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/bg_button_react"
                android:fontFamily="@font/reem_kufi"
                android:text="@string/text_embrace"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonwave"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_marginVertical="20dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/bg_button_react"
                android:fontFamily="@font/reem_kufi"
                android:text="@string/text_Wave"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buttonKiss"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/bg_button_react"
                android:fontFamily="@font/reem_kufi"
                android:text="@string/text_Kiss"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>



</FrameLayout>