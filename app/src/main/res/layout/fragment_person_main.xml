<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.Person_main"
    android:id="@+id/personal_fragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="right">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_your_friend"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/light_green"/>

        <ImageButton
            android:id="@+id/button_sett"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/settings"
            android:layout_margin="10dp"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/button_person"
        android:layout_width="200dp"
        android:layout_height="190dp"
        android:foreground="@drawable/pesonl"
        android:layout_gravity="center"
        android:layout_marginBottom="50dp"
        android:backgroundTint="@color/backgroud"/>


</FrameLayout>