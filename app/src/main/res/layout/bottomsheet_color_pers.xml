<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:background="@drawable/down_bottom_sheet"
            android:id="@+id/button_back"
            android:layout_marginBottom="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/text_choose_color"
            android:textColor="@color/black"
            android:textSize="24dp"
            android:textStyle="bold"
            android:fontFamily="@font/b612_mono"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_margin="15dp">

            <ImageView
                android:id="@+id/first_color"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/firstcolorpers"
                android:layout_marginHorizontal="10dp"/>

            <ImageView
                android:id="@+id/second_color"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/personcolorsecond"
                android:layout_marginHorizontal="10dp"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>